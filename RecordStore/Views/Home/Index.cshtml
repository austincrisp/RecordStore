@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Make Rock Great Again</h1>
    <p class="lead">
        Born in the 70s/80s and miss hearing those great hits?  Born in the 90s and feel like you were born in the wrong decade musically?
        Don't worry, we've got you covered.  "For those about to rock, we salute you!" - AC/DC
    </p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Bands</h2>
        <p>
            Got a favorite band?  Click on the button below to get started!
        </p>
        <p><a class="btn btn-success" @Html.ActionLink("Get Started", "Index", "Band")</a></p>
    </div>
    <div class="col-md-6">
        <h2>Albums</h2>
        <p>
            Already see the band listed but missing your favorite album?  No worries!  Click the button below to add it!
        </p>
        <p><a class="btn btn-success" @Html.ActionLink("Add an Album", "Index", "Album")</a></p>
    </div>
</div>